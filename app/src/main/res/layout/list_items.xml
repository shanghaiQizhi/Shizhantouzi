<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:paddingBottom="2dip"
    android:paddingLeft="12dip"
    android:paddingRight="12dip"
    android:paddingTop="2dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/JIANPING"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView01"
                android:layout_marginLeft="10dp"
                android:textColor="#FFaa00"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/UPDOWN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView02"
                android:layout_marginLeft="10dp"
                android:textColor="#B5BE2A"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/JIANPRICE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView02"
                android:layout_marginLeft="10dp"
                android:textColor="#00C905"
                android:textSize="14dip" />
            <TextView
                android:id="@+id/JIANTIME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView02"
                android:layout_marginLeft="10dp"
                android:textColor="#00C905"
                android:textSize="14dip" />
            <TextView
                android:id="@+id/PINGPRICE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView02"
                android:layout_marginLeft="10dp"
                android:textColor="#249ABC"
                android:textSize="14dip" />
            
            
            
            <TextView
                android:id="@+id/PINGTIME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView02"
                android:layout_marginLeft="10dp"
                android:textColor="#249ABC"
                android:textSize="14dip" />
            
            <TextView
                android:id="@+id/PEOPLE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView02"
                android:layout_marginLeft="10dp"
                android:textColor="#0000FF"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/JIAOYISUO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView02"
                android:layout_marginLeft="10dp"
                android:textColor="#Ff00FF"
                android:textSize="14dip" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>